<wwl:CheckedWindow x:Class="Samples.CheckedComboBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wwl="clr-namespace:WpfWindowsLib;assembly=WpfWindowsLib"
        mc:Ignorable="d"
        Title="Test CheckedComboBox" SizeToContent="WidthAndHeight">
  <Grid Background="{StaticResource GridBackground}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="140"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <wwl:CheckedComboBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TestCheckedComboBox" Margin="9"  
                        IsRequired="True">
      <ComboBoxItem Content=" "/>
      <ComboBoxItem Content="Changed"/>
    </wwl:CheckedComboBox>
    <Rectangle Grid.Row="1" Grid.Column="0" Grid.RowSpan="5" Fill="{StaticResource LabelBackground}"/>
    <Label Grid.Row="1" Grid.Column="0" Content="_IsRequried" Target="{Binding ElementName=IsRequriedCheckBox}"/>
    <CheckBox Grid.Row="1" Grid.Column="1" x:Name="IsRequriedCheckBox"
              IsChecked="{Binding ElementName=TestCheckedComboBox, Path=IsRequired, Mode=TwoWay}"/>
    <Label Grid.Row="2" Grid.Column="0" Content="_SelectedIndexNullable" Target="{Binding ElementName=SelectedIndexNullableTextBox}"/>
    <TextBox Grid.Row="2" Grid.Column="1" x:Name="SelectedIndexNullableTextBox" IsEnabled="False"/>
    <Button Grid.Row="3" Grid.Column="0" Content="Initialise()" x:Name="InitialiseButton" ToolTip="Calls Initialise()"/>
    <Label Grid.Row="4" Grid.Column="0" Content="_Selected" Target="{Binding ElementName=InitialiseSelectedCheckBox}"/>
    <ComboBox Grid.Row="4" Grid.Column="1" x:Name="InitialiseSelectedComboBox" SelectedIndex="0">
      <ComboBoxItem Content="blank"/>
      <ComboBoxItem Content="Changed"/>
    </ComboBox>
    <Label Grid.Row="5" Grid.Column="0" Content="I_sRequired" Target="{Binding ElementName=InitialiseIsRequriedComboBox}"/>
    <ComboBox Grid.Row="5" Grid.Column="1" x:Name="InitialiseIsRequriedComboBox" SelectedIndex="0">
      <ComboBoxItem Content="don't change"/>
      <ComboBoxItem Content="not required"/>
      <ComboBoxItem Content="required"/>
    </ComboBox>
    <Rectangle Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Fill="{StaticResource PanelBackground}"/>
    <Button Grid.Row="6" Grid.Column="1" x:Name="SaveButton" Content="_Save"/>
  </Grid>
</wwl:CheckedWindow>